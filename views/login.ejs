<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Grab 'n' Go</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        /* Toggle switch styles */
        .toggle-switch {
            position: relative;
            width: 200px;
            height: 40px;
            border-radius: 20px;
            background-color: #f3f4f6;
            overflow: hidden;
        }
        .toggle-switch input {
            display: none;
        }
        .toggle-slider {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            transition: 0.4s;
        }
        .toggle-slider::before {
            content: "";
            position: absolute;
            width: 100px;
            height: 36px;
            left: 2px;
            bottom: 2px;
            background-color: #ea580c;
            transition: 0.4s;
            border-radius: 18px;
        }
        input:checked + .toggle-slider::before {
            transform: translateX(96px);
        }
        .toggle-option {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #4b5563;
            z-index: 1;
            transition: 0.4s;
        }
        input:checked ~ .toggle-slider .toggle-option.user {
            color: #4b5563;
        }
        input:not(:checked) ~ .toggle-slider .toggle-option.vendor {
            color: #4b5563;
        }
        input:checked ~ .toggle-slider .toggle-option.vendor,
        input:not(:checked) ~ .toggle-slider .toggle-option.user {
            color: white;
        }
    </style>
</head>

<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="flex-shrink-0 flex items-center">
                        <span class="text-2xl font-bold text-orange-500">Grab 'n' Go</span>
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/" class="text-gray-700 hover:text-orange-500 px-3 py-2 rounded-md text-sm font-medium">Home</a>
                    <a href="/register" class="text-gray-700 hover:text-orange-500 px-3 py-2 rounded-md text-sm font-medium">Register</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="text-center text-3xl font-extrabold text-gray-900">
                Welcome back to Grab 'n' Go
            </h2>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <!-- Account Type Toggle -->
                <div class="mb-6 flex justify-center">
                    <label class="toggle-switch">
                        <input type="checkbox" id="accountType">
                        <div class="toggle-slider">
                            <span class="toggle-option user">User</span>
                            <span class="toggle-option vendor">Vendor</span>
                        </div>
                    </label>
                </div>

                <form class="space-y-6" action="/login" method="POST" id="loginForm">
                    <input type="hidden" name="role" id="roleInput" value="user">
                    
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700">
                            Username
                        </label>
                        <div class="mt-1">
                            <input id="username" name="Username" type="text" required
                                class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500">
                        </div>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700">
                            Password
                        </label>
                        <div class="mt-1">
                            <input id="password" name="Password" type="password" required
                                class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500">
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input id="remember_me" name="remember_me" type="checkbox"
                                class="h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-300 rounded">
                            <label for="remember_me" class="ml-2 block text-sm text-gray-900">
                                Remember me
                            </label>
                        </div>

                        <div class="text-sm">
                            <a href="#" class="font-medium text-orange-600 hover:text-orange-500">
                                Forgot your password?
                            </a>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                            Sign in
                        </button>
                    </div>
                </form>

                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-gray-500">
                                Don't have an account?
                            </span>
                        </div>
                    </div>

                    <div class="mt-6">
                        <a href="/register"
                            class="w-full flex justify-center py-2 px-4 border border-orange-300 rounded-md shadow-sm text-sm font-medium text-orange-600 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                            Create new account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const accountTypeToggle = document.getElementById('accountType');
            const roleInput = document.getElementById('roleInput');
            const loginForm = document.getElementById('loginForm');

            accountTypeToggle.addEventListener('change', function() {
                const isVendor = this.checked;
                roleInput.value = isVendor ? 'vendor' : 'user';
                loginForm.action = isVendor ? '/vendor-login' : '/login';
            });
        });
    </script>

    <!-- Footer -->
    <footer class="bg-gray-800 mt-auto">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <p class="text-gray-400 text-sm text-center">
                &copy; 2024 Grab 'n' Go. All rights reserved.
            </p>
        </div>
    </footer>
</body>

</html>
